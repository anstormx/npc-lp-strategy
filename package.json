    "@uniswap/v3-sdk": "^3.9.0",
    "axios": "^1.4.0",
    "cors": "^2.8.5",
    "decimal.js": "^10.5.0",
    "dotenv": "^16.3.1",
    "ethers": "^5.7.2",
    "express": "^4.18.2",
    "mongodb": "^6.5.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.7",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
