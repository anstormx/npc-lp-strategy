    "deploy:pools": "tsc && node dist/scripts/deploy-pools.js",
    "config:pools": "tsc && node dist/scripts/use-custom-pools.js"
  },
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@types/decimal.js": "^0.0.32",
