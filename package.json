{
  "name": "npc-lp-strategy",
  "version": "1.0.0",
  "description": "NPC LP Strategy for Base network",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "tsc && node dist/index.js",
    "dev": "ts-node src/index.ts",
    "dashboard": "ts-node src/dashboard/server.ts",
    "build:dashboard": "tsc && xcopy /E /I src\\dashboard\\client public",
